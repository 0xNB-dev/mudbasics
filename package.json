{
  "name": "mud",
  "version": "0.0.0",
  "description": "A toolkit for building on-chain worlds",
  "repository": "https://github.com/latticexyz/mud.git",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "lerna": "^4.0.0",
    "prettier": "^2.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "commit": "cz",
    "prettier:check": "prettier --check 'packages/**/*.ts'",
    "prettier": "prettier --write 'packages/**/*.ts'"
  }
}
